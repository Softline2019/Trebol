        <InputText @bind-Value="model.User" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Class:</label>
        <InputText @bind-Value="model.ClassString" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Regime:</label>
        <InputText @bind-Value="model.RegimeString" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">NIT:</label>
        <InputNumber @bind-Value="model.NIT" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">NIT Code:</label>
        <InputText @bind-Value="model.NITCode" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Business Name:</label>
        <InputText @bind-Value="model.BusinessName" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Address:</label>
        <InputText @bind-Value="model.Address" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">City:</label>
        <InputText @bind-Value="model.City" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Phone 1:</label>
        <InputNumber @bind-Value="model.Phone1" class="form-control" />
